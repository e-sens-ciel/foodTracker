{% extends 'base.html.twig' %}

{% block body %}
<section class="hero-section set-bg register-section spad" data-setbg="assets/img/hero-bg.jpg">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <div class="register-text">
                        <div class="section-title" id="register">
                            <h2>Log in now</h2>
                        </div>
                        <form action="{{ path('security_login') }}" method="post">
                            <div class="form-group">
                                <input placeholder="Adress mail..." required name="_username" type "text" class="form-control">
                            </div>

                            <div class="form-group">
                                <input placeholder="Password" required name="_password" type "password" class="form-control">
                            </div>
                            <div class="form-group">
                                <button  class="btn btn-success" type="submit">Connexion</button>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="register-pic">
                        <img src="assets/img/register-pic.jpg" alt="">
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

